{
  "name": "hover-music-hub",
  "version": "0.0.1-beta1",
  "description": "A minimal Electron + Vue application",
  "main": "build/main/main.js",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "node scripts/build.js && electron-builder --publish always",
    "build:win": "node scripts/build.js && electron-builder --win --publish always",
    "build:mac": "node scripts/build.js && electron-builder --mac --publish always",
    "build:linux": "node scripts/build.js && electron-builder --linux --publish always",
    "dist": "node scripts/build.js && electron-builder",
    "dist:win": "node scripts/build.js && electron-builder --win",
    "dist:mac": "node scripts/build.js && electron-builder --mac",
    "dist:linux": "node scripts/build.js && electron-builder --linux"
  },
  "repository": "https://github.com/deluze/electron-vue-template",
  "author": {
    "name": "Hover Studios",
    "url": "https://github.com/Hover-Studios"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "electron": "^25.2.0",
    "electron-builder": "^24.2.1",
    "typescript": "^4.8.4",
    "vite": "^4.1.1"
  },
  "dependencies": {
    "vue": "^3.2.47"
  }
}
